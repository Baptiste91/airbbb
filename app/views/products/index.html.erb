<div class="container mt-3">
  <div class="cards">
    <% @products.each do |product| %>
      <%= link_to product_path(product), style: "text-decoration: none;" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?product/)">
          <%= product.name %>
        </div>
      <% end  %>
    <% end  %>
  </div>


  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Add new product
  </button>
</div>


<!-- Button trigger modal -->
<%# <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button> %>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @product do |f| %>
          <%= f.input :name %>
          <%= f.input :price %>
          <%= f.submit "Submit", class:"btn btn-outline-primary"%>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


<% if @product.errors.any? %>
  <script>
    $('#exampleModal').modal('show');
  </script>
<% end %>
